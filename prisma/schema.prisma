// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())

  notes Note[]
  films Film[]
  votes Vote[]
  accounts Account[]
  sessions Session[]

  @@map("users")
}

// Модели для Auth.js (NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Note {
  id        String   @id @default(uuid())
  ownerId   String
  title     String
  createdAt DateTime @default(now())

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@map("notes")
}

model Category {
  id       String @id @default(cuid())
  category String @unique

  films Film[]

  @@map("categories")
}

model Film {
  id          String      @id @default(cuid())
  ownerId     String
  title       String
  content     String
  description String?
  categoryId  String
  visibility  Visibility  @default(PRIVATE)
  isPublic    Boolean     @default(false)  // Публичность (дополнительно к visibility для простоты)
  isFavorite  Boolean     @default(false)  // Избранное
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?

  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  category Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  votes    Vote[]
  tags     FilmTag[]

  @@index([ownerId, updatedAt])
  @@index([visibility, createdAt])
  @@index([isPublic, createdAt])
  @@index([ownerId, isFavorite])
  @@map("films")
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())

  films FilmTag[]

  @@map("tags")
}

model FilmTag {
  filmId String
  tagId  String

  film Film @relation(fields: [filmId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([filmId, tagId])
  @@map("film_tags")
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  promptId  String
  value     Int      @default(1)
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt Film @relation(fields: [promptId], references: [id], onDelete: Cascade)

  @@unique([userId, promptId])
  @@index([promptId])
  @@index([userId])
  @@map("votes")
}

enum Visibility {
  PRIVATE
  PUBLIC
}
